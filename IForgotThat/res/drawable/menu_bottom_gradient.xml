<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Top color -->
    <item android:top="25dp">
        <shape android:shape="rectangle">
  			<gradient
				android:startColor="#050505"
				android:endColor="#0A0A0A"
				android:angle="-270" 
				/> 
				
			</shape>
    </item>
  

    <!-- Bottom color -->
      <item android:bottom="25dp">
        <shape android:shape="rectangle">
  			<gradient
				android:startColor="#252525"
				android:endColor="#151515"
				android:angle="-270" /> 
			</shape>
    </item>
    
</layer-list>
