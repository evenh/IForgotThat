<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- When a list element is clicked, it's state are 
    checked in this file, and the background is set accordingly-->
    
	<!--List element Focused-->
    <item   android:state_focused="true"
            android:state_pressed="false"
            android:drawable="@drawable/list_item_gradient"
            />
	<!-- List element Focused Pressed-->
    <item   android:state_focused="true"
            android:state_pressed="true"
            android:drawable="@drawable/when_list_clicked"
            />
	<!-- List element Pressed-->
    <item   android:state_focused="false"
            android:state_pressed="true"
            android:drawable="@drawable/when_list_clicked"
            />
	<!-- Navigation Default background -->
    <item   android:drawable="@drawable/list_item_gradient"/>

</selector>