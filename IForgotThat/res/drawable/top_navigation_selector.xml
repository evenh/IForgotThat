<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- When a top navigation bar is clicked, it's state are 
    checked in this file, and the background is set accordingly-->
    
	<!--Navigation Focused-->
    <item   android:state_focused="true"
            android:state_pressed="false"
            android:drawable="@drawable/when_navigation_clicked"
            />
	<!-- Navigation Focused Pressed-->
    <item   android:state_focused="true"
            android:state_pressed="true"
            android:drawable="@drawable/when_navigation_clicked"
            />
	<!-- Navigation Pressed-->
    <item   android:state_focused="false"
            android:state_pressed="true"
            android:drawable="@drawable/when_navigation_clicked"
            />
	<!-- Navigation Default background-->
    <item   android:drawable="@drawable/menu_top_gradient"/>

</selector>