<TwoLineListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:mode="twoLine" >

    <TextView
        android:id="@+id/geofenceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dip"
        android:layout_toLeftOf="@+id/deleteGeofenceButton"
        android:textAppearance="?android:attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/geofenceAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/geofenceTitle"
        android:layout_alignStart="@android:id/text1"
        android:layout_below="@id/geofenceTitle"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/deleteGeofenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/button_selector"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

</TwoLineListItem>
