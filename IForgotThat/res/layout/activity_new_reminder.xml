<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/listName"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="false"
        android:background="@drawable/menu_top_gradient"
        android:clickable="true"
        android:gravity="center"
        android:text=""
        android:textColor="#fefefe"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/camera_user_image"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher" />

    <EditText
        android:id="@+id/reminder_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/remember_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:background="@drawable/menu_bottom_gradient"
        android:columnCount="1" >

        <ImageButton
            android:id="@+id/btn_trash"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="0"
            android:background="@drawable/menu_bottom_gradient"
            android:onClick="thrashAndExit"
            android:src="@drawable/ic_action_cancel" />

        <ImageButton
            android:id="@+id/btn_addAlarm"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:background="@drawable/menu_bottom_gradient"
            android:onClick="showAlarmDialog"
            android:src="@drawable/ic_action_alarms" />

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_row="0"
            android:background="@drawable/menu_bottom_gradient"
            android:onClick="saveReminder"
            android:src="@drawable/ic_action_accept" />
    </GridLayout>

</LinearLayout>